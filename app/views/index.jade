extends layouts/_default

mixin section_content(section_title)
  section.section(class="#{section_title}", id="#{section_title}_Page")
    .container
      .row
        div(class="#{section_title}" + "-visual")
        div(class="#{section_title}" + "-caption")
          h3= '('+ section_title +')'+' We are ????'
          h4
            | Subtitle
            +lipsum(2, "sentences")
          - for (var i = 0; i < 3; i++)
            p
              +lipsum(3, "sentences")


